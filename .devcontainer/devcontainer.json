{
	"name": "Go",
	"dockerFile": "Dockerfile",
	"forwardPorts": [80, 443, 53],
	"postCreateCommand": "go mod download",
	"runArgs": [
		"-u",
		"vscode",
		"--cap-add=SYS_PTRACE",
		"--security-opt",
		"seccomp=unconfined",
		// map SSH keys for Git
		"-v", "${env:HOME}/.ssh:/home/vscode/.ssh:ro",
		"--name", "needle-dev"
]
}
